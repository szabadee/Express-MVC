    <label for="distributor">Distrubutor</label>
    <input type="distributor" class="form-control" name="distributor" value="{{videogame.distributor}}" />  
  </div>
  <div class="form-group">
    <label for="name">Name</label>
    <input type="name" class="form-control" name="name" value="{{videogame.name}}" />  
  </div>
  <div class="form-group">
    <label for="type">Type</label>
    <input type="type" class="form-control" name="type" value="{{videogame.type}}" />  
  </div>
